Q97: Print the initials of a name.

/*
Sample Test Cases:
Input 1:
John Doe
Output 1:
J.D.
*/


//Solution:

#include <stdio.h>

int main() {
    char str[100];
    int i = 0;
    gets(str);
    if (str[0] != ' ')
        printf("%c.", str[0]);
    while (str[i] != '\0') {
        if (str[i] == ' ' && str[i + 1] != ' ' && str[i + 1] != '\0')
            printf("%c.", str[i + 1]);
        i++;
    }
    printf("\n");
    return 0;
}


--------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------

Q98: Print initials of a name with the surname displayed in full.

/*
Sample Test Cases:
Input 1:
John David Doe
Output 1:
J.D. Doe

*/

//Solution:

#include <stdio.h>
#include <string.h>

int main() {
    char str[100], words[10][20];
    int i = 0, j = 0, k = 0, n;
    gets(str);
    while (1) {
        if (str[i] == ' ' || str[i] == '\0') {
            words[k][j] = '\0';
            k++;
            j = 0;
            if (str[i] == '\0')
                break;
        } else {
            words[k][j++] = str[i];
        }
        i++;
    }
    n = k;
    for (i = 0; i < n - 1; i++)
        printf("%c.", words[i][0]);
    printf(" %s\n", words[n - 1]);
    return 0;
}
